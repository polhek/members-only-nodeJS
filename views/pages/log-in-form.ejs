<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="bg-gray-200 font-mono">
    <header
      class="w-screen bg-blue-700 flex justify-between font-mono items-center"
    >
      <%- include('../partials/header'); %>
    </header>

    <div class="flex justify-center">
      <div class="rounded flex flex-col w-1/3 mt-12 bg-white shadow p-4">
        <h1 class="text-xl mb-5">You already a member? Log in now!</h1>
        <div>
          <form action="/log-in" method="POST" class="flex flex-col">

            <label for="username">Username:</label>
            <input
              name="username"
              placeholder="Insert your  username here..."
              type="text"
              class="mb-5 p-3 border"
              autocomplete="username"
              required
            />
            <label for="password">Password:</label>
            <input
              name="password"
              type="password"
              class="mb-5 border p-3"
              autocomplete="current-password"
              required
            />

            <button
              class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
            >
              Log in!
            </button>
          </form>
          <% if (errors) { %>
            <% for (const error in errors) {%>
              <p><%= error.msg %></p>
          <% }} %>
        </div>
      </div>
    </div>
  </body>
</html>