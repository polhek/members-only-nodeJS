<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="bg-gray-200 font-mono">
    <header
      class="w-screen bg-blue-700 flex justify-between font-mono items-center"
    >
      <%- include('../partials/header'); %>
    </header>

    <div class="flex justify-center">
      <div class="rounded flex flex-col w-1/3 mt-12 bg-white shadow p-4">
        <h1 class="text-xl mb-5">Write a new message here!</h1>
        <div>
          <form action="" method="POST" class="flex flex-col">

            <label for="message">Message:</label>
            <textarea
              name="message"
              placeholder="Insert your message text here..."
              type="textarea"
              class="mb-5 p-3 border"
              required
            > </textarea>


            <button
              class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
            >
              Send message!
            </button>
          </form>
          <% if (errors) { %>
            <% for (const error in errors) {%>
              <p><%= error.msg %></p>
          <% }} %>
        </div>
      </div>
    </div>
  </body>
</html>